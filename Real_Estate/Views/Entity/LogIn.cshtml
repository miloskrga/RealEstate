@model Real_Estate.Models.Korisnik
@{
    ViewData["Title"] = "LogIn Korisnik";
}

<div class="container">
    <div class="row">
       <div class="col-lg-12">
           <div class="card mt-5">
               <div class="card-header">
                   <div class="row">
                       <div class="col-md-9">
                           <h3>LogIn</h3>
                       </div>

                   </div>
               </div>
               <div class="card-body">
                    @{
                        if (ViewBag.Poruka != null)
                        {
                            <p>@ViewBag.Poruka</p>
                        }
                    }
                    <form  method="post" asp-action="LogIn" asp-controller="Entity">
                        <!-- Email input -->
                        <div class="form-group mb-3">
                            <label class="control-label">Email address</label>
                            <div>
                                <input type="email" asp-for="Email" name="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Password input -->
                        <div class="form-group mb-3">
                            <label class="control-label" >Password</label>
                            <div>
                                <input type="password" asp-for="Password" name="Password" class="form-control" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div class="form-group text-center mb-3">
                            <br />
                            <input type="submit" class="btn btn-primary btn-lg form-control" name="LogIn" value="LogIn" />
                            
                        </div>

                        <!-- Register buttons -->
                        <div class="form-group text-center">       
                            <br />                          
                            <p>Not a member? <a href="/Entity/Registracija">Register</a></p>                           
                        </div>
                    </form>
               </div>
           </div>
       </div>
    </div>
</div>

